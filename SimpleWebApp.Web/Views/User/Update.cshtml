@model SimpleWebApp.Core.Entities.User

@{
    ViewBag.Title = "Update User";
}

<h2>Update User: @Model.Id</h2>

<div>
    <form asp-action="update" method="post">
        <div>
            <label for="Username">Username:</label>
            <input type="text" name="Username" id="Username" value="@Model.Username" />
        </div>
        <div>
            <label for="Name">Name:</label>
            <input type="text" name="Name" id="Name" value="@Model.Name" />
        </div>
        <div>
            <label for="Family">Family:</label>
            <input type="text" name="Family" id="Family" value="@Model.Family" />
        </div>
        <div>
            <label for="Password">Password:</label>
            <input type="password" name="Password" id="Password" value="@Model.Password" />
        </div>
        <div>
            <button type="submit">Update User</button>
        </div>
    </form>
</div>